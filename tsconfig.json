{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",           // ✅ Required for ts-node ESM + no `.js`
    "moduleResolution": "NodeNext", // ✅ Resolves extensionless imports
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true
  },
  "ts-node": {
    "esm": true                     // ✅ ts-node in ESM mode
  }
}
